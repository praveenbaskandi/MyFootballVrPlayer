<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/id_player_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50456585"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/id_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/id_player_image"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/id_image_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_player_name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_player_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_player_club" />
        </LinearLayout>

</RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>